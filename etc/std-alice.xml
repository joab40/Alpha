<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- Category is an atomic AIML unit -->
    <category>

        <!-- Pattern to match in user input -->
        <!-- If user enters "LOAD AIML B" -->
        <pattern>LOAD AIML ALICE</pattern>

        <!-- Template is the response to the pattern -->
        <!-- This learn an aiml file -->
        <template>
            <learn>../etc/alice/update.aiml</learn>
            <learn>../etc/alice/ai.aiml</learn>
            <learn>../etc/alice/alice.aiml</learn>
            <learn>../etc/alice/bot.aiml</learn>
            <learn>../etc/alice/bot_profile.aiml</learn>
            <learn>../etc/alice/default.aiml</learn>
            <learn>../etc/alice/client.aiml</learn>
            <learn>../etc/alice/client_profile.aiml</learn>
            <learn>../etc/alice/atomic.aiml</learn>

            <!-- You can add more aiml files here -->
            <!--<learn>more_aiml.aiml</learn>-->
        </template>

    </category>

</aiml>
